@model ProfileDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()


<div class="page-content">

    <!-- ***** Profile Details ***** -->
    <div class="row">
        <div class="col-lg-12">
            <div class="feature-banner header-text">
                <div class="row">
                    <div class="col-lg-4">
                        @if (Model.ProfileImageUrl is not null)
                        {
                            <img src="@Model.ProfileImageUrl" class="card-img-top" alt="@Model.UserName Profil Resmi" style="object-fit: cover; height: 350px ; border-radius: 23px;">
                        }
                        else
                        {
                           <span > Proil resmi yükleyin </span> 
                        }
                       
                       </div>
                    <div class="col-lg-8">

                        <div class="top-downloaded">
                            <div class="heading-section">
                                <h4>@Model.UserName</h4>
                            </div>
                            <p class="text-muted mb-1"><strong>Email:</strong> @Model.Email</p>
                            <p class="text-muted mb-1"><strong>Email Doğrulama:</strong> @(Model.EmailConfirmed ? "Aktif" : "Pasif")</p>
                            <p class="text-muted mb-1"><strong>Phone:</strong> @Model.PhoneNumber</p>
                            <p class="text-muted mb-1">
                                <strong>Roller:</strong> @foreach (var rol in Model.Roles)
                                {
                                    <span>@rol </span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ***** Bölümler 1 ***** -->
    <div class="game-details">
        <div class="row">
            <div class="col-lg-12">
                <h2>Puanlamalar</h2>
            </div>
            <div class="col-lg-12">
                <div class="content">
                    <div class="row">
                        @if (Model.comicRating != null && Model.comicRating.Any())
                        {
                            @for (int i = 0; i < Model.comicRating.OrderByDescending(c => c.Score).Count(); i++)
                            {
                                var rating = Model.comicRating.OrderByDescending(c => c.Score).ElementAt(i);
                                if (i % 2 == 0)
                                {
                                    <div class="col-lg-6">
                                        <div class="left-info">
                                            <div class="left">
                                                <a asp-controller="Comics"
                                                   asp-action="Details"
                                                   asp-route-comicSlug="@rating.Comic.Slug">
                                                    <h4>@rating.Comic.Title</h4>
                                                    <span>@rating.CreatedAt.ToShortDateString()</span>
                                                </a>
                                            </div>
                                            <ul>
                                                <li><i class="fa fa-star"></i> @rating.Score</li>
                                            </ul>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-lg-6">
                                        <div class="right-info">
                                            <div class="left">
                                                <a asp-controller="Comics"
                                                   asp-action="Details"
                                                   asp-route-comicSlug="@rating.Comic.Slug">
                                                    <h4>@rating.Comic.Title</h4>
                                                    <span>@rating.CreatedAt.ToShortDateString()</span>
                                                </a>
                                            </div>
                                            <ul>
                                                <li><i class="fa fa-star"></i> @rating.Score</li>
                                            </ul>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
