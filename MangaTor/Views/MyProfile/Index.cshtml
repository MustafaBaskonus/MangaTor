                {
                    if (i == Model.commentWithPaginations.Pagination.CurrentPage)
                    {
                        <div class="main-button ">
                            <a asp-action="Details" asp-route-PageNumber="@i" class="btn btn-secondary" )">
                                @i
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="main-border-button">
                            <a asp-action="Details" asp-route-PageNumber="@i" class="btn  btn-outline-dark" )">
