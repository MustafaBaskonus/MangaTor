@model List<Comic>


@foreach (var comic in Model)
{
    <ul>
        <li><img src="@comic.CoverImageUrl" alt="@comic.Title Kapak Resmi" class="templatemo-item" style="object-fit: cover; height: 80px;"></li>
        <li>
            <h4>
                <a asp-controller="Comics" asp-action="Details" asp-route-comicSlug="@comic.Slug" class="card-text  text-decoration-none">
                    @comic.Title
                </a>
            </h4><span>@comic.Author</span>
        </li>
        <li><h4>Date Added</h4><span> @comic.DateTime.ToString("dd MMMM")</span></li>
        <li><h4>Hours Played</h4><span>740 H 52 Mins</span></li>
        <li><h4>Currently</h4><span>Downloaded</span></li>
        <li><div class="main-border-button"><a asp-controller="Comics" asp-action="Details" asp-route-comicSlug="@comic.Slug">Read</a></div></li>
    </ul>
}





