@model List<ReactionTypeDto>

<div class="game-details">
    <div class="row">
        <div class="col-lg-12">
            <div class="content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="right-info">
                            <ul class="list-inline">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <li class="list-inline-item">
                                            <a asp-controller="Reactions"
                                               asp-action="AddReaction"
                                               asp-route-chapterId="@ViewBag.ChapterId"
                                               asp-route-reactionTypeId="@item.Id"
                                               asp-route-comicSlug="@ViewBag.ComicSlug"
                                               class="btn btn-secondary">
                                                <i class="@item.Icon"></i> @item.ReactionCount
                                            </a>
                                        </li>
                                    }
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <li><i class="@item.Icon">@item.SequenceNumber</i></li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>