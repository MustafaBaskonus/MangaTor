@using DAL.Entities
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1>Bölüm Resimleri Ekle</h1>
    <hr />
    <form asp-area="Admin" asp-controller="Pages" asp-action="Create" method="post" enctype="multipart/form-data">
        <input type="hidden" name="chapterId" value="@ViewBag.ChapterId" />

        <div class="form-group mb-3">
            <label class="control-label">Resimleri Seç</label>
            <input type="file" name="files" multiple class="form-control" accept="image/*" />
        </div>

        <div class="form-group">
            <input type="submit" value="Resimleri Yükle" class="btn btn-primary" />
            <a asp-area="Admin" asp-controller="Comics" asp-action="Index"  class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>

