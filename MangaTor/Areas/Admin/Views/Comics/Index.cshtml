@model ComicListViewModel
@{
    ViewData["Title"] = "Admin - Seriler";

}

<div class="container mt-1">
    <h1>Çizgi Roman Serileri (@Model.Comics.Count())</h1>
    <div class="row">

        <div class="col-md-3">
            <div class="row">
                <div class="row g-4 mb-4 border rounded p-3 bg-gradient shadow-sm">
                    <p>
                        @await Component.InvokeAsync("_CategoriesMenuComponentPartial")
                    </p>
                </div>
                <div class="row g-4 mb-4 border rounded p-3 bg-gradient shadow-sm">
                    <p>
                        @await Component.InvokeAsync("_ComicFilterComponentPartial")
                    </p>

                </div>
            </div>
        </div>

        <hr class="my-2" />
        <div class="col-md-8">
            <div class="d-flex justify-content-start">
                <a asp-area="Admin" asp-controller="Comics" asp-action="ComicCreate" class="btn btn-outline-success">
                    <i class="mdi mdi-account-plus"></i>
                    Yeni Seri Ekle
                </a>
            </div>
            <div class="row g-4">
                @foreach (var item in Model.Comics)
                {
                    <div class="col-md-12 ">
                        <div class="row g-4 mb-4 border rounded p-3 bg-gradient shadow-sm">
                            <div class="col-md-3">
                                <div class="card h-100">
                                    <img src="@item.CoverImageUrl" class="card-img-top" alt="@item.Title Kapak Resmi" style="object-fit: cover; height: 250px;">
                                </div>
                            </div>

                            <div class="col-md-9 d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h3 class="card-title mb-0">@item.Title</h3>
                                    <div class="btn-group" role="group">
                                        <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.ComicId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <a asp-area="Admin" asp-action="Details" asp-route-comicSlug="@item.Slug" class="btn btn-info btn-sm text-white">
                                            <i class="fas fa-list-alt"></i> Bölümleri Yönet
                                        </a>
                                        <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.ComicId" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i> Sil
                                        </a>
                                    </div>
                                </div>

                                <hr class="my-2" />

                                <div class="card-text">
                                    <p class="text-muted mb-1"><strong>Konu:</strong> @item.Description</p>
                                    <p class="text-muted mb-1"><strong>Tarih:</strong> @item.DateTime.ToShortDateString()</p>
                                    <p class="text-muted mb-1"><strong>Bölüm Sayısı:</strong> @item.Chapters?.Count()</p>
                                    <p class="text-muted mb-1"><strong>Yazar:</strong> @item.Author</p>
                                    <p class="text-muted mb-1"><strong>URL:</strong> @item.Slug</p>
                                    <p class="text-muted mb-1"><strong>Yayın Durumu:</strong> @(item.IsActive ? "Aktif" : "Pasif")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex justify-content-center mt-4">
                @if (Model?.Pagination != null)
                {
                    <div class="btn-group">
                        @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
                        {
                            <a asp-action="Index" asp-route-PageNumber="@i"
                               class="btn @(i == Model.Pagination.CurrentPage ? "btn-secondary" : "btn-outline-dark")">
                                @i
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
