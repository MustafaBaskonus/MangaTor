@model IEnumerable<UserDtoForUpdate>
@{
    ViewData["Title"] = "Index";

}

@{
    int counter = 1;
}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Users</h4>
                    <p class="card-description">
                    </p>
                    <div class="d-flex justify-content-end">
                        <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-outline-success">
                            <i class="mdi mdi-account-plus"></i>
                            Add User
                        </a>
                    </div>
                    <div class="table-responsive">


                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th>UserName</th>
                                    <th>Roles</th>
                                    <th>Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@(counter++)</td>
                                        <td class="py-1">
                                            @if (user.ProfileImageUrl is not null)
                                            {
                                                <img src="@user.ProfileImageUrl" alt="@user.UserName profil resmi" />
                                            }
                                            else
                                            {
                                                <img src="~/template/assets/images/faces-clipart/pic-3.png" alt="default images" />
                                            }
                                        </td>
                                        <td>@user.UserName</td>
                                        <td>
                                            @foreach (var rol in user.UserRoles)
                                            {
                                                <span>@rol </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a data-toggle="tooltip" data-placement="top" title="Edit"
                                                   class="btn btn-inverse-success  btn-md" asp-action="Update" asp-route-id="@user.UserName">
                                                    <i class="mdi mdi-pencil">Edit</i>
                                                </a>
                                                <a data-toggle="tooltip" data-placement="top" title="Reset Password"
                                                   class="btn btn-inverse-info btn-md" asp-action="ResetPassword" asp-route-id="@user.UserName">
                                                    <i class="fa-solid fa-key">Reset Password</i>
                                                </a>
                                                <form method="post" asp-action="DeleteOneUser">
                                                    <input type="hidden" name="UserName" value="@user.UserName" />
                                                    <button data-toggle="tooltip" data-placement="top" title="Delete"
                                                            type="submit" class="btn btn-inverse-danger btn-md">
                                                        <i class="mdi mdi-account-remove"> Sil</i>

                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
}
